// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// System Roles for staff/admin access
enum Role {
  USER        // Regular users submitting trips
  IMMIGRATION
  GOVERNMENT
  ZIMRA       // Zimbabwe Revenue Authority (Tax/Customs)
  ADMIN
}

// Traveler Type - Anyone passing through port of entry
enum TravelerType {
  VISITOR              // Foreign visitor
  CITIZEN              // Zimbabwean citizen
  PERMANENT_RESIDENT   // Permanent resident
  RESIDENT_PERMIT      // Resident permit holder
  WORK_PERMIT          // Work permit holder
  STUDY_PERMIT         // Study permit holder
  DIPLOMATIC           // Diplomatic / official
  TRANSIT              // Transit passenger
}

// Trip/Submission Status
enum TripStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  REJECTED
  EXPIRED
}

// Gender enum
enum Gender {
  MALE
  FEMALE
  OTHER
}

// Purpose of Visit
enum VisitPurpose {
  TOURISM
  BUSINESS
  EMPLOYMENT
  STUDY
  MEDICAL
  TRANSIT
  RETURNING_RESIDENT
  FAMILY_VISIT
  CONFERENCE
  OFFICIAL
  OTHER
}

// Travel Document Type
enum DocumentType {
  PASSPORT
  DIPLOMATIC_PASSPORT
  OFFICIAL_PASSPORT
  TRAVEL_DOCUMENT
  EMERGENCY_TRAVEL_DOCUMENT
  NATIONAL_ID
}

// User model for authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          Role      @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  trips         Trip[]        @relation("UserTrips")
  reviewedTrips Trip[]        @relation("ReviewerTrips")
  auditLogs     AuditLog[]
  profile       TravelerProfile?

  // Border post assignment for immigration officers
  borderPostId  String?
  borderPost    BorderPost?    @relation(fields: [borderPostId], references: [id])

  @@index([email])
  @@index([role])
}

// Stored profile for frequent travelers
model TravelerProfile {
  id                    String       @id @default(cuid())
  userId                String       @unique
  user                  User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Traveler type (can change per trip, but store default)
  defaultTravelerType   TravelerType @default(VISITOR)

  // Personal Information (stored for quick form fill)
  firstName             String
  middleName            String?
  lastName              String
  dateOfBirth           DateTime
  gender                Gender
  nationality           String
  countryOfResidence    String
  occupation            String?

  // Primary Document Information
  documentType          DocumentType @default(PASSPORT)
  documentNumber        String
  documentIssueDate     DateTime
  documentExpiryDate    DateTime
  documentIssuingCountry String

  // Contact Information
  phoneNumber           String?
  emergencyContactName  String?
  emergencyContactPhone String?

  // Residential Address (home country)
  homeAddress           String?
  homeCity              String?
  homeCountry           String?
  homePostalCode        String?

  // Zimbabwean Address (for residents/permit holders)
  zimbabweAddress       String?
  zimbabweCity          String?
  zimbabwePostalCode    String?

  // Permit details (for permit holders)
  permitNumber          String?
  permitExpiryDate      DateTime?

  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt

  @@index([documentNumber])
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// NextAuth Verification Token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Border Posts / Ports of Entry
model BorderPost {
  id          String   @id @default(cuid())
  name        String
  code        String   @unique
  type        String   // LAND, AIR, SEA
  location    String?
  country     String?  // Adjacent country for land borders
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  officers    User[]
  trips       Trip[]

  @@index([code])
}

// Trip - Each submission is tied to a trip
model Trip {
  id                    String       @id @default(cuid())
  referenceNumber       String       @unique
  status                TripStatus   @default(DRAFT)

  // Traveler Type for this trip
  travelerType          TravelerType @default(VISITOR)

  // Personal Information
  firstName             String
  middleName            String?
  lastName              String
  dateOfBirth           DateTime
  gender                Gender
  nationality           String
  countryOfResidence    String
  occupation            String?

  // Travel Document Information
  documentType          DocumentType @default(PASSPORT)
  documentNumber        String
  documentIssueDate     DateTime
  documentExpiryDate    DateTime
  documentIssuingCountry String

  // Permit details (if applicable)
  permitNumber          String?
  permitExpiryDate      DateTime?

  // Contact Information
  email                 String
  phoneNumber           String
  emergencyContactName  String?
  emergencyContactPhone String?

  // Travel Information
  purposeOfVisit        VisitPurpose
  purposeOther          String?           // If purpose is OTHER
  intendedStayDuration  Int               // Days
  arrivalDate           DateTime
  departureDate         DateTime?
  flightNumber          String?
  vesselName            String?
  previousCountry       String            // Last country before Zimbabwe

  // Accommodation in Zimbabwe
  accommodationType     String            // HOTEL, RESIDENCE, HOSTEL, etc.
  accommodationName     String
  accommodationAddress  String
  accommodationCity     String
  accommodationPhone    String?

  // Health Declaration
  hasSymptoms           Boolean           @default(false)  // fever, cough, etc.
  symptomsDescription   String?
  visitedYellowFeverCountry Boolean       @default(false)
  yellowFeverCountries  String?           // Comma-separated list if yes
  yellowFeverCertificate Boolean          @default(false)  // Has certificate
  contactWithInfectious Boolean           @default(false)
  infectiousContactDetails String?
  seekingMedicalTreatment Boolean         @default(false)
  medicalFacilityName   String?
  currentMedications    String?
  healthDeclarationAccepted Boolean       @default(false)

  // Customs Declaration
  carryingCurrency      Boolean           @default(false)
  currencyAmount        Float?
  currencyType          String?
  carryingGoods         Boolean           @default(false)
  goodsDescription      String?
  goodsValue            Float?
  carryingProhibitedItems Boolean         @default(false)
  prohibitedItemsDescription String?

  // Final Declaration
  declarationAccepted   Boolean           @default(false)
  declarationDate       DateTime?
  signature             String?           // Digital signature data

  // Relations
  userId                String
  user                  User              @relation("UserTrips", fields: [userId], references: [id])

  reviewerId            String?
  reviewer              User?             @relation("ReviewerTrips", fields: [reviewerId], references: [id])

  borderPostId          String?
  borderPost            BorderPost?       @relation(fields: [borderPostId], references: [id])

  // Companions (for group travel)
  companions            Companion[]

  // Review Information
  reviewNotes           String?
  reviewedAt            DateTime?
  rejectionReason       String?

  // Timestamps
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
  submittedAt           DateTime?

  @@index([referenceNumber])
  @@index([documentNumber])
  @@index([status])
  @@index([userId])
  @@index([arrivalDate])
}

// Companion travelers (children, family members)
model Companion {
  id              String       @id @default(cuid())
  firstName       String
  lastName        String
  dateOfBirth     DateTime
  gender          Gender
  nationality     String
  documentType    DocumentType @default(PASSPORT)
  documentNumber  String
  relationship    String       // SPOUSE, CHILD, PARENT, etc.

  tripId          String
  trip            Trip         @relation(fields: [tripId], references: [id], onDelete: Cascade)

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([tripId])
}

// Audit Log for tracking changes
model AuditLog {
  id          String   @id @default(cuid())
  action      String   // CREATE, UPDATE, DELETE, APPROVE, REJECT, etc.
  entityType  String   // Trip, User, etc.
  entityId    String
  oldData     String?  // JSON string of old values
  newData     String?  // JSON string of new values
  ipAddress   String?
  userAgent   String?

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())

  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
}

// System Settings
model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
